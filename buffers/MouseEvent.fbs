namespace Disseminate.Mouse;

enum Type : byte { Move, Press, Release }
enum Button : byte { None, Left, Middle, Right }

struct Location {
    x: float;
    y: float;
}

table Event
{
    type: Type;
    button: Button;
    location: Location;
    delta: Location;
    windowNumber: int;
    modifiers: ulong = 0;
    timestamp: double = 0;
    clickCount: int = 1;
    pressure: float = 1;
    fromUuid: string;
}

root_type Event;
